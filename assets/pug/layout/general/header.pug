        |
        |
        .headerBottom
            .container-xl.containerHeaderBottom
                .contentHeaderBottom
                    .wrapCloseMenuHeaderMobile

                    .wrapMenuMainHeader
                        +menu_main(data.header.menu, 0)

                        .wrapInfoContact
                            each item in data.header.contact
                                a.linkItem(href= item.link title= item.title target= item.target == true ? '_blank' : '')
                                    +render_svg(item.icon)
                                    = item.title
