// header
.wrapHeader
    .contentHeader
        .headerTop
            .container-xl.containerItem
                .contentItem
                    if data_page.slide_main
                        h1.wrapLogoHeader= data.general.title_website
                            +render_link_logo(data)
                    else
                        .wrapLogoHeader= data.general.title_website
                            +render_link_logo(data)
                    |
                    |
                    .contentRight
                        .wrapLanguage
                            .contentLanguage
                                .titleLanguage
                                    img(src='images/language/en.jpg' alt='English')

                                    .btnDropdownLanguage
                                        svg(aria-hidden='true' focusable='false' role='img' xmlns='http://www.w3.org/2000/svg' viewbox='0 0 256 512')
